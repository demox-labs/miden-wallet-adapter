{
  "name": "@demox-labs/miden-wallet-adapter",
  "version": "0.3.0",
  "description": "Modular TypeScript wallet adapters and React components for Miden applications.",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "https://github.com/demox-labs/miden-wallet-adapter",
  "author": "Demox Labs",
  "license": "MIT",
  "scripts": {
    "build": "tsc && yarn copy-styles",
    "clean": "rimraf dist/ node_modules/",
    "copy-styles": "copyfiles -u 4 node_modules/@demox-labs/miden-wallet-adapter-reactui/dist/styles.css dist/",
    "doc": "echo \"(no docs)\""
  },
  "dependencies": {
    "@demox-labs/miden-wallet-adapter-base": "workspace:^",
    "@demox-labs/miden-wallet-adapter-miden": "workspace:^",
    "@demox-labs/miden-wallet-adapter-react": "workspace:^",
    "@demox-labs/miden-wallet-adapter-reactui": "workspace:^"
  },
  "devDependencies": {
    "@types/react-dom": "^19.0.4",
    "copyfiles": "^2.4.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "peerDependencies": {
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles.css": "./dist/styles.css"
  }
}
